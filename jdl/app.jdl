entity UserChars {
    userId String
    maxChars Integer
    remaningChars Integer
}


entity Squeal {
	userId String
    timestamp Long
    body String
    img  ImageBlob
    imgName String
    videoContentType String
    videoName String
    nCharacters Integer
    squealIdResponse String
    refreshTime Integer
}
@embedded
entity SquealDestination{
    destination String
    destinationType ChannelTypes
    adminAdd Boolean
}


relationship OneToMany {
Squeal{destination} to SquealDestination{squeal}
}

entity SquealViews{
    squealId String
    number Integer
}


entity SquealReaction{
userId String
username String
squealId String
positive Boolean
emoji String
}

entity GeolocationCoordinates{
squealId String
userId String
latitude Double
longitude Double 
accuracy Double
heading Double
speed Double
timestamp Long

}

entity SquealCat{
    userId String
    squealId String
    category CategoryTypes
    nCharacters Integer
    timestamp Long
}

enum CategoryTypes{
    POPULAR,
    UNPOPULAR,
    CONTROVERSIAL

}

entity CharactersPurchased{
userId String
nCharacters Integer
timestampBought Long
timestampExpire Long
amount BigDecimal
adminDiscount Boolean
}

entity Channel {
    name String
    type ChannelTypes
    modType String
    emergency Boolean
}

enum ChannelTypes{
    PRIVATEGROUP,
    PUBLICGROUP,
    MOD,
    MESSAGE
}

entity ChannelUser{
    userId String
    channelId String
    privilege PrivilegeType

}

enum PrivilegeType{
ADMIN,
WRITE,
READ

}

entity SMMVIP{
    userId String

}

@embedded
entity SMMUser{
    userId String
}

relationship OneToMany {
    SMMVIP{users} to SMMUser{SMM}
}